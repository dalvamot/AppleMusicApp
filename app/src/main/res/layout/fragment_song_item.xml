<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/artwork_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/song_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Song name not available"
            app:layout_constraintEnd_toStartOf="@+id/price_textView"
            app:layout_constraintStart_toEndOf="@+id/artwork_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/artist_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:text="Artist name not available"
            app:layout_constraintEnd_toStartOf="@+id/price_textView"
            app:layout_constraintStart_toEndOf="@+id/artwork_imageView"
            app:layout_constraintTop_toBottomOf="@+id/song_textView" />

        <TextView
            android:id="@+id/price_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price not available"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>